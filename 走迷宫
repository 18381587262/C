#include<stdio.h>
#include<windows.h>
#include<conio.h>
#define ROW 9
#define COL 11
char map[ROW][COL+1]={
{"*#*********"},
{"***###*###*"},
{"###**#****#"},
{"*#**###**#*"},
{"***********"},
{"#####*##*##"},
{"**#*****#*E"},
{"***#*###**#"},
{"*#*********"},
};
void print_map()
{
	for(int i=0;i<ROW;i++)
	{
		puts(map[1]);
	}
}
void show_cursor(int x,int y)
{
	COORD pos;
	pos.X=x;
	pos.Y=y;
	printf("curX=%d,curY=%d\n",x,y);
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),pos);
}
int curX,curY;
int main()
{
	while(1)
	{
		system("cls");
		print_map();
	   	 show_cursor(curX,curY);
	   	 char t=getch();
		if(t=='w')
		{
			//向上走
			if((curY-1)>=0 && map[curY-1][curX]=='*'||map[curY-1][curX+1]=='E') curY--;
		}
		else if(t=='s')
		{
			//向下走
			if((curY+1)<ROW && map[curY+1][curX]=='*'||map[curY+1][curX]=='E') curY++;
		}
		else if(t=='a')
		{
			//向左走
			if((curY-1)>=0 && map[curY][curX]-1=='*'||map[curY][curX-1]=='E') curY--;
		}
		else if(t=='d')
		{
			//向右走
			if((curY+1)<COL && map[curY][curX+1]=='*'||map[curY][curX+1]=='E') curY++;
		}
		if(map[curY][curX]=='E')
		{
			printf("haha,you are very good!/n");
			printf("you con invite your friendsto enter the maze together!/n");
			break;
		}
	}
	return 0;
}
