#include<stdio.h> 
int main(){
	
    int a[10];
    printf("请输入10个整数:\n") ;
    int i=0;
    scanf("%d",&a[i]) ;
    int max=a[i],min=a[i];
    for(i=1;i<10;i++){
        scanf("%d",&a[i]) ;
        if(a[i]>max)max=a[i];
        if(a[i]<min)min=a[i];
        }
        int m0,m1;
        for(i=0;i<10;i++){
            if(max==a[i])m0=i;
            if(min==a[i])m1=i;
            }
            printf("最大值：%d 最小值：%d ",max,m0,min,m1);
            return 0;
}
